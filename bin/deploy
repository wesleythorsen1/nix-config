#!/usr/bin/env bash

set -euo pipefail

nixos-rebuild switch \
  --flake .#thinkpad \
  --build-host builder@linux-builder \
  --target-host wes@thinkpad \
  --use-remote-sudo \
  --option builders "" \
  --verbose
  # --build-flags '--option builders ""' \


